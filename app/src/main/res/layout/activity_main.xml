<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apprtc.pn.carbuddythailand.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/LinTop"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView"
                android:src="@drawable/a51"
                android:adjustViewBounds="false" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView2"
                android:src="@drawable/a52" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView3"
                android:src="@drawable/a47" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView4"
                android:src="@drawable/a43" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView5"
                android:src="@drawable/a48" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView6"
                android:src="@drawable/a49" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView7"
                android:src="@drawable/a45" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView8"
                android:src="@drawable/a31" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView9"
                android:src="@drawable/a32" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView10"
                android:src="@drawable/a33" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView11"
                android:src="@drawable/a34" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView12"
                android:src="@drawable/a35" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView13"
                android:src="@drawable/a36" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView14"
                android:src="@drawable/a37" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:id="@+id/imageView15"
                android:src="@drawable/a38" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinTop"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="3"
            android:hint="@string/search" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickSearch"
            android:text="Search"
            android:id="@+id/button" />
    </LinearLayout>
</RelativeLayout>
